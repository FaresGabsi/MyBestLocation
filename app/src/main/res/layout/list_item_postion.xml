<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@color/colorSurface"
    android:radius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

                <!-- Avatar -->
                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Avatar"
                    android:src="@drawable/ic_person"
                    app:tint="@color/colorPrimary" />

                <!-- Content Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <!-- User Pseudo -->
                        <TextView
                            android:id="@+id/tvPseudo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Latitude Row -->
                        <LinearLayout
                            android:id="@+id/llLatitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                                <ImageView
                                    android:id="@+id/ivLatitudeIcon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_pos"
                                    android:contentDescription="Latitude Icon"
                                    android:layout_marginEnd="4dp"
                                    app:tint="@color/colorAccent" />
                                <TextView
                                    android:id="@+id/tvLatitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Latitude: 0.000"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Longitude Row -->
                        <LinearLayout
                            android:id="@+id/llLongitude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                                <ImageView
                                    android:id="@+id/ivLongitudeIcon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_pos"
                                    android:contentDescription="Longitude Icon"
                                    android:layout_marginEnd="4dp"
                                    app:tint="@color/colorAccent" />
                                <TextView
                                    android:id="@+id/tvLongitude"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Longitude: 0.000"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Phone Number Row -->
                        <LinearLayout
                            android:id="@+id/llPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="4dp">
                                <ImageView
                                    android:id="@+id/ivPhoneIcon"
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_phone"
                                    android:contentDescription="Phone Icon"
                                    android:layout_marginEnd="4dp"
                                    app:tint="@color/colorAccent" />
                                <TextView
                                    android:id="@+id/tvPhoneNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone: +123456789"
                                    android:textColor="@color/colorSecondary"
                                    android:textSize="12sp" />
                        </LinearLayout>
                </LinearLayout>

                <!-- Actions Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                        <!-- Call Icon -->
                        <ImageView
                            android:id="@+id/ivCallIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_phone"
                            android:contentDescription="Call Icon"
                            app:tint="@color/colorPrimary" />

                        <!-- SMS Icon -->
                        <ImageView
                            android:id="@+id/ivSmsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_sms"
                            android:contentDescription="SMS Icon"
                            app:tint="@color/colorPrimary" />

                        <!-- Map Icon -->
                        <ImageView
                            android:id="@+id/ivViewMap"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_map"
                            android:contentDescription="View Map"
                            app:tint="@color/colorPrimaryVariant" />

                        <!-- Delete Icon -->
                        <ImageView
                            android:id="@+id/ivDelete"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="Delete"
                            app:tint="@color/colorError" />
                </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>
