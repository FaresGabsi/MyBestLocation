<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyBestLocation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item> <!-- Darker variant for primary -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Text/icons on primary -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item> <!-- Darker variant for secondary -->
        <item name="colorOnSecondary">#FFFFFF</item> <!-- Text/icons on secondary -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:colorBackground">#FAFAFA</item> <!-- Light background -->

        <!-- Text colors -->
        <item name="android:textColor">#212121</item> <!-- Dark text -->
        <item name="android:textColorHint">#BDBDBD</item> <!-- Hint text -->
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.MyBestLocation.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background and text colors -->
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorHint">#BDBDBD</item>

        <!-- Disable ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App Bar Overlay Theme -->
    <style name="Theme.MyBestLocation.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Match primary theme colors -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
    </style>

    <!-- Popup Overlay Theme -->
    <style name="Theme.MyBestLocation.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <!-- Match primary theme colors -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="android:colorBackground">#FFFFFF</item> <!-- White for popup background -->
        <item name="android:textColor">#212121</item> <!-- Dark text -->
    </style>
</resources>
